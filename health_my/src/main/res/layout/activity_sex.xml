<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SexActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择性别"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/sp_16" />

        <Button
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_30"
            android:text="完成"
            android:layout_centerVertical="true"
            android:background="@drawable/translucent1"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/but_wc"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="#f2f2f2"
        android:layout_marginTop="@dimen/dp_58"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boy"
            android:id="@+id/boy_iv"
            android:layout_marginLeft="@dimen/dp_30"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_marginLeft="@dimen/dp_40"
            android:id="@+id/iv_yes"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_below="@id/boy_iv"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_21"
            android:textColor="#4fcb9f"
            android:layout_marginLeft="@dimen/dp_80"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl"
            android:id="@+id/girl_iv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"
            android:visibility="gone"
            android:id="@+id/iv_no"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:layout_below="@id/girl_iv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_21"
            android:textSize="14sp"
            android:textColor="#f984a2"
            />
    </RelativeLayout>


</RelativeLayout>