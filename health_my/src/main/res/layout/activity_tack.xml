<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TackActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="#f2f2f2" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_task_title"
        android:text="签到条"
        android:textColor="#fff"
        android:textSize="14sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_33"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_32"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_32"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_30"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/pop_style"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_35"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天"
            android:textSize="10sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_33"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_32"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N天"
            android:textSize="10sp"
            android:layout_marginLeft="@dimen/dp_30"
            />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_task_title"
            android:text="每日任务"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="已完成"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_20"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="签到"
                android:background="@drawable/translucent1"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收发病友圈"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="+10H币"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="领H币"
                android:textColor="#fff"
                android:background="@drawable/translucent2"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_20"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"

                android:textSize="12sp"
                android:textColor="#fff"
                android:text="去完成"
                android:background="@drawable/translucent1"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病友圈首评"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="+10H币"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dp_22"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="领H币"
                android:textColor="#fff"
                android:visibility="gone"
                android:background="@drawable/translucent2"
                android:layout_marginRight="@dimen/dp_20"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="去完成"

                android:background="@drawable/translucent1"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_task_title"
            android:text="一次性任务"
            android:textColor="#fff"
            android:textSize="14sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善我的信息"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="+30H币"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="去完成"
                android:background="@drawable/translucent1"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收发朋友圈"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:text="+30H币"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"

                android:textSize="12sp"
                android:textColor="#fff"
                android:text="去完成"
                android:background="@drawable/translucent1"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>